.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.scroll-area {
  flex: 1;
  padding: 20rpx;
}

.news-section {
  background-color: #20211c;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.news-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}
