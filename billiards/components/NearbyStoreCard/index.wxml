<view class="nearby-store-card">
  <view class="store-info-section">
    <view class="store-header">
      <text class="store-title">附近门店</text>
      <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=arrow&width=24&height=24&random=arrow_24_24" class="arrow-icon" />
    </view>
    <view class="store-details">
      <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=store&width=24&height=30&random=store_24_30" class="store-icon" />
      <text class="distance">1km</text>
      <text class="store-name">北京马连洼北路店</text>
    </view>
    <button class="play-btn">立即打球</button>
  </view>
  
  <view class="scan-section">
    <view class="scan-container">
      <view class="scan-info">
        <text class="scan-title">扫码开台</text>
        <text class="scan-description">请扫描桌上的二维码</text>
      </view>
      <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=qr-code&width=114&height=168&random=qr-code_114_168" class="qr-code" />
    </view>
    
    <view class="chase-score-section">
      <text class="chase-score-title">追分玩法</text>
      <view class="chase-score-info">
        <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=chase-score&width=108&height=48&random=chase-score_108_48" class="chase-score-icon" />
        <text class="chase-score-count">99+人等你追分</text>
      </view>
    </view>
  </view>
  
  <view class="promotion-images">
    <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=promotion1&width=400&height=200&random=promotion1_400_200" class="promotion-image" />
    <image src="https://www.weavefox.cn/api/bolt/unsplash_image?keyword=promotion2&width=400&height=200&random=promotion2_400_200" class="promotion-image" />
  </view>
</view>
