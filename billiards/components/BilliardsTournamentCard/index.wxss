.billiards-tournament-card {
  background-color: #20211c;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tournament-container {
  background-color: #2f302b;
  border: 2rpx solid #182530;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
}

.tournament-header {
  background-image: url('https://www.weavefox.cn/api/bolt/unsplash_image?keyword=tournament-background&width=600&height=300&random=tournament-background_600_300');
  background-size: cover;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx;
  padding-bottom: 60rpx;
}

.tournament-title-section {
  background-color: #cac720;
  border: 2rpx dashed #516c11;
  border-radius: 14rpx;
  padding: 5rpx;
  width: fit-content;
  margin-left: auto;
  margin-bottom: 20rpx;
}

.tournament-title {
  color: #2c2c2c;
  font-size: 16rpx;
  font-weight: bold;
  background-color: #f8ab1f;
  padding: 2rpx 5rpx;
}

.tournament-info {
  text-align: center;
  margin-bottom: 20rpx;
}

.tournament-host {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.tournament-call {
  color: #ffef16;
  font-size: 38rpx;
  font-weight: bold;
  display: block;
}

.tournament-hashtag-section {
  text-align: center;
}

.tournament-hashtag {
  color: #e7d630;
  font-size: 16rpx;
  display: block;
}

.tournament-btn {
  background-color: #40413c;
  border: 2rpx solid #282a24;
  border-radius: 32rpx;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  margin: 0 auto;
}

.btn-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.btn-icon {
  width: 30rpx;
  height: 30rpx;
}
