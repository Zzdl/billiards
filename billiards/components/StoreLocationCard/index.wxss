.store-location-card {
  background-color: #20211c;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.store-card {
  border-radius: 36rpx;
  background-color: #20211c;
}

.store-map {
  width: 100%;
  height: 84rpx;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.store-details {
  background-color: #33352f;
  border: 3rpx solid #1f201c;
  border-radius: 30rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.location-info {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.location-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.store-distance {
  color: #ffffff;
  font-size: 36rpx;
}

.view-more {
  display: flex;
  align-items: center;
}

.view-more-text {
  color: #ffe908;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 42rpx;
  height: 42rpx;
  border-radius: 15rpx;
}
